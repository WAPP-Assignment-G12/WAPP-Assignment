
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="space-y-6">
    <div class="border-2 border-dashed border-gray-300 p-12 rounded-lg bg-white text-center shadow-sm">
        <p class="text-xs text-gray-500 mb-4 uppercase tracking-widest">Welcome to ValoPro</p>
        <h1 class="text-5xl font-extrabold text-gray-900 mb-4">MASTER THE GAME</h1>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
            The ultimate learning platform for Valorant. Master weapon recoil, learn agent lineups, and book coaching sessions with pros.
        </p>
        <div class="flex gap-4 justify-center">
            <button class="bg-red-600 hover:bg-red-700 text-white px-8 py-3 rounded font-bold shadow-lg transition">
                Get Started
            </button>
            <button class="bg-white border border-gray-300 hover:bg-gray-50 px-8 py-3 rounded font-bold text-gray-700 transition">
                Browse Library
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-red-500">
            <h3 class="font-bold text-xl mb-2">Weapon Guides</h3>
            <p class="text-gray-600">Detailed stats, damage numbers, and recoil patterns for every gun.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-red-500">
            <h3 class="font-bold text-xl mb-2">Agent Mastery</h3>
            <p class="text-gray-600">Learn abilities, lineups, and optimal strategies for your main.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-red-500">
            <h3 class="font-bold text-xl mb-2">Pro Coaching</h3>
            <p class="text-gray-600">Book 1-on-1 sessions with Immortal+ ranked coaches.</p>
        </div>
    </div>
</div>

