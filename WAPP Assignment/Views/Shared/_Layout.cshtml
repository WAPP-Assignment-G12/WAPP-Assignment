@using System.Web.Mvc.Html
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ValoPro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">

    <nav class="bg-gray-900 border-b border-red-800 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center gap-2">
                    <i data-lucide="crosshair" class="text-red-500"></i>
                    <span class="font-bold text-2xl tracking-tighter text-red-500">ValoPro</span>
                </div>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium" })
                        @Html.ActionLink("Weapons", "Index", "Weapons", null, new { @class = "hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium" })
                        @Html.ActionLink("Agents", "Index", "Agents", null, new { @class = "hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium" })

                        <a href="#" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-bold">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow">
        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-gray-800 text-gray-400 py-6 text-center">
        <p>&copy; @DateTime.Now.Year - ValoPro Learning System</p>
    </footer>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>